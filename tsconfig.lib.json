{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "noEmit": false,
    "skipLibCheck": true
  },
  "include": [
    "library.ts",
    "components/Snowfall.tsx",
    "components/WebGLRenderer.ts",
    "types.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "components/Controls.tsx",
    "components/__tests__",
    "App.tsx",
    "index.tsx"
  ]
}
